@model StudentTeacherManagement.Models.Teacher

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Add Teacher</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter teacher's full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" placeholder="Enter age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Sex" class="form-label">Sex</label>
                <select asp-for="Sex" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Classes" class="form-label">Classes</label>
                <input asp-for="Classes" class="form-control" placeholder="Enter class names separated by commas (e.g., Class 1, Class 2)" />
                <span asp-validation-for="Classes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Teacher Image (optional)</label>
                <input type="file" name="image" class="form-control" />
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
                
            </div>
        </form>
    </div>
</div>
