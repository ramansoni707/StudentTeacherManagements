@model StudentTeacherManagement.Models.Student

<div class="card shadow-sm mt-2">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Add Student</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" placeholder="Enter age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Class" class="form-label">Class</label>
                <input type="text" asp-for="Class" class="form-control" placeholder="Enter class (e.g., 10th)" />
            </div>
            <div class="mb-3">
                <label for="RollNumber" class="form-label">Roll Number</label>
                <input type="number" asp-for="RollNumber" class="form-control" placeholder="Enter roll number" />
                <span asp-validation-for="RollNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Image" class="form-label">Student Image (optional)</label>
                <input type="file" name="image" class="form-control" />
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary  ms-2">Back</a>
               
            </div>
        </form>
    </div>
</div>
