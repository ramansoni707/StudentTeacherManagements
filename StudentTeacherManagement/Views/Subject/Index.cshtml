@model IEnumerable<StudentTeacherManagement.Models.Subject>

@{
    ViewData["Title"] = "Subjects List";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Subjects</h3>
    </div>
    <div class="card-body">
        <!-- Create link -->
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-success">Create New Subject</a> 
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Languages</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td>@subject.Name</td>
                        <td>@subject.Class</td>
                        <td>@subject.Languages</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
