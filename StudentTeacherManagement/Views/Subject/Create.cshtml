@model StudentTeacherManagement.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Create Subject</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Subject Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter subject name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Class" class="form-label">Class</label>
                <input asp-for="Class" class="form-control" placeholder="Enter class" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Languages" class="form-label">Languages</label>
                <input type="text" name="languages" id="languages" class="form-control" placeholder="Enter languages separated by commas (e.g., English, Spanish)" />
                <span asp-validation-for="Languages" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
               
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
